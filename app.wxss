@import 'miniprogram_npm/@vant/weapp/common/index.wxss';

page {
  background-color: #F8F8F8;
}

.round-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  border-radius: 40rpx;
  color: #333;
  font-size: 31rpx;
  background-color: rgba(248, 248, 248, .8);
}

.container {
  padding: 10rpx 35rpx;
}

.elli {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.multi-elli {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}

.extra {
  display: flex;
  font-size: 25rpx;
  color: lightgray;
  white-space: nowrap;
  padding: 10rpx 0;
}