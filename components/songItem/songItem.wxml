<view class="song-item container" bind:tap="playSong">
  <!-- icon -->
  <view>
    <van-icon name="play-circle-o" size="40rpx" class="right-icon" bind:click="playSong" />
    <van-icon name="more-o" size="40rpx" class="right-icon" />
  </view>
  <!-- 歌曲信息 -->
  <view class="song-info">
    <!-- 歌曲名 -->
    <text class="elli">{{songItem.name}}</text>
    <view class="extra">
      <!-- 歌手名 -->
      <block wx:for="{{songItem.ar}}">
        <text>{{item.name}}</text>
        <text wx:if="{{index<(songItem.ar.length-1)}}">/</text>
      </block>
      <!-- 专辑名 -->
      <text class="elli" wx:if="{{songItem.al.name!=''}}"> - {{songItem.al.name}}</text>
    </view>
  </view>
</view>